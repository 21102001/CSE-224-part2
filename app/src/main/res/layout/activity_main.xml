<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F5DE15">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="LPU:Vaccination Status Form"
        android:textColor="#ED0101"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/title"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="300dp"
        android:layout_marginRight="300dp"
        android:text="Name: "
        android:textColor="#ED0101"
        android:textSize="23sp" />

    <EditText
        android:id="@+id/yourname"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="118dp"
        android:gravity="center"
        android:hint="Full name"
        android:inputType="text" />

    <TextView
        android:id="@+id/pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/yourname"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="190dp"
        android:layout_marginRight="200dp"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="Registration No : "
        android:textColor="#ED0101"
        android:textSize="23sp" />

    <EditText
        android:id="@+id/regno"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/pass"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="118dp"
        android:gravity="center"
        android:hint="8 digits"
        android:inputType="number" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/regno"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="210dp"
        android:layout_marginRight="210dp"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="Email Address: "
        android:textColor="#ED0101"
        android:textSize="23sp" />

    <EditText
        android:id="@+id/youremail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/email"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="118dp"
        android:gravity="center"
        android:hint="valid email"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="200dp"
        android:layout_marginRight="100dp"
        android:text="Vaccine status :"
        android:textColor="#ED0101"
        android:textSize="23sp" />

    <RadioGroup
        android:id="@+id/radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/gender"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="28dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/not"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Not vaccinated"
            android:textColor="#ED0101"
            android:textSize="15dp"/>

        <RadioButton
            android:id="@+id/one"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Only first dose taken"
            android:textColor="#ED0101"
            android:textSize="15dp"/>

        <RadioButton
            android:id="@+id/fully"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#ED0101"
            android:text="Fully vaccinated(Both doses)"
            android:textSize="15dp"/>

    </RadioGroup>

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/radio"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:singleLine="true"
        android:text="Information provided by me is valid"
        android:textColor="#ED0101"
        android:textSize="18dp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn"
        android:layout_width="148dp"
        android:layout_height="64dp"
        android:layout_alignTop="@id/checkbox"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="145dp"
        android:layout_marginRight="145dp"
        android:backgroundTint="@android:color/transparent"
        android:text="Submit"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#ED0101"
        app:cornerRadius="5dp"
        app:strokeColor="#ED0101"
        app:strokeWidth="5dp" />

</RelativeLayout>